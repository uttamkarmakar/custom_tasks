{#
/**
 * @file
 * Default theme implementation to display event statistics.
 *
 * Available variables:
 * - yearly_counts: An array containing the yearly event counts.
 * - quarterly_counts: An array containing the quarterly event counts.
 * - type_counts: An array containing the event type counts.
 *
 * @ingroup themeable
 */
#}
<div class="event-dashboard-container">
  <div class="event-dashboard-column">
    <h2>Yearly Event Counts</h2>
    <table class="event-dashboard-table">
      <thead>
        <tr>
          <th>Year</th>
          <th>Event Count</th>
        </tr>
      </thead>
      <tbody>
        {{ dump(yearly_counts) }}
        {% for year, count in yearly_counts %}
          <tr>
            <td>{{ year }}</td>
            <td>{{ count }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  <div class="event-dashboard-column">
    <h2>Quarterly Event Counts</h2>
    <table class="event-dashboard-table">
      <thead>
        <tr>
          <th>Quarter</th>
          <th>Event Count</th>
        </tr>
      </thead>
      <tbody>
        {{ dump(quarterly_counts) }}
        {% for quarter, count in quarterly_counts %}
          <tr>
            <td>{{ quarter }}</td>
            <td>{{ count }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  <div class="event-dashboard-column">
    <h2>Event Type Counts</h2>
    <table class="event-dashboard-table">
      <thead>
        <tr>
          <th>Event Type</th>
          <th>Event Count</th>
        </tr>
      </thead>
      <tbody>
        {{ dump(type_counts) }}
        {% for type, count in type_counts %}
          <tr>
            <td>{{ type }}</td>
            <td>{{ count }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
